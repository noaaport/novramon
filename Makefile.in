@include@ @q@Makefile.inc@q@
@include@ @q@VERSION@q@

DIRS = src/c src/tcl doc

all: 
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE}) \
	done

install:
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} install) \
	done

install-dirs:
	install -d ${MYDOCDIR}
	install -d ${MYLIBDIR}
	install -d ${MYEXAMPLESDIR}

clean:
	for dir in ${DIRS}; do \
	(cd $$dir; ${MAKE} clean) \
	done
	rm -f *~ Makefile Makefile.inc
